{
    "Version": "2012-10-17",
    "Statement": [
         {
             "Sid": "MountpointFullBucketAccess",
             "Effect": "Allow",
             "Action": [
                 "s3:ListBucket",
                 "s3:GetBucketLocation"
             ],
             "Resource": [
                 "${BUCKET_ARN}"
             ]
         },
         {
             "Sid": "MountpointFullObjectAccess",
             "Effect": "Allow",
             "Action": [
                 "s3:GetObject",
                 "s3:PutObject",
                 "s3:AbortMultipartUpload",
                 "s3:DeleteObject"
             ],
             "Resource": [
                 "${BUCKET_ARN}/*"
             ]
         }
    ]
 }